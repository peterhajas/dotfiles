set message_cachedir=”~/.mutt/cache/bodies”
set certificate_file=~/.mutt/certificates

# Accounts

set realname = "Peter Hajas"
set imap_check_subscribed

# Storage

set folder = imaps://imap.gmail.com/
set spoolfile = +INBOX
mailboxes = +INBOX

# Sort by threads, and show the newest message up top

set sort = threads
set sort_aux = reverse-last-date-received

# Pager configuration

set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

# Use ctrl-u to show links in the message

macro pager \Cu "|urlview<enter>" "call urlview to open links"

# Keybindings galore

# Index keybindings

# Some vim-style movement for the index

bind index gg first-entry
bind index G last-entry

# R for reply-all

bind index R group-reply

# Pager (message viewer) keybindings

# More vim-movement

bind pager j next-line
bind pager k previous-line
bind pager gg top
bind pager G bottom

# Use R for reply-all here also

bind pager R group-reply

# View attachments when hitting enter

bind attach <return> view-mailcap
