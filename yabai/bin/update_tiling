#!/bin/bash

BAR_HEIGHT=30
EDGE_PADDING=10
PADDING=10
WIDGET_PADDING=180

WIDGET_PADDING=$(($WIDGET_PADDING + $EDGE_PADDING))

WIDTH=$(yabai -m query --displays | jq ".[0].frame.w")
LAYOUT="float"

# less than 2000 means BSP
if awk -v num="$WIDTH" -v comp="2100" 'BEGIN { exit !(num < comp) }'; then
    LAYOUT="bsp"
else
    LAYOUT="float"
fi

# back to BSP for now
LAYOUT="bsp"

if [ "$LAYOUT" = "bsp" ]; then
    # Pad for widgets just on the main display's 10 spaces
    for (( i=0; i<=10; i++ ))
    do
        yabai -m config --space $i layout $LAYOUT left_padding $WIDGET_PADDING right_padding $WIDGET_PADDING
    done
else
    for (( i=1; i<=10; i++ ))
    do
        yabai -m config --space $i layout $LAYOUT
    done
fi


for (( i=11; i<=30; i++ ))
do
    yabai -m config --space $i layout $LAYOUT
done
