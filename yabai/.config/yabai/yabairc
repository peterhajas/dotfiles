# vim: ft=bash

BAR_HEIGHT=30
PADDING=0
WIDGET_PADDING=180

yabai -m config \
    auto_balance on \
    bottom_padding $PADDING \
    external_bar main:$BAR_HEIGHT:0 \
    layout bsp \
    left_padding $PADDING \
    mouse_action1 move \
    mouse_action2 resize \
    mouse_drop_action swap \
    mouse_follows_focus off \
    mouse_modifier ctrl \
    right_padding $PADDING \
    split_ratio 0.382 \
    top_padding $PADDING \
    window_border on \
    window_gap $PADDING\
    window_placement second_child \

# Pad for widgets just on the main display's 10 spaces
for (( i=1; i<=10; i++ ))
do
    yabai -m config --space $i left_padding $WIDGET_PADDING right_padding $WIDGET_PADDING
done

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Steam$" manage=off

yabai -m signal --add event="display_changed" action="~/bin/update_tiling"

update_tiling

