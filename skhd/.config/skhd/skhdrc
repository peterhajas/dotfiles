# App Shortcuts
# "Layer 1" - main apps

shift + ctrl + alt - a : open -a "Safari"
shift + ctrl + alt - s : open -a "Ghostty"
shift + ctrl + alt - d : open -a "Messages"
shift + ctrl + alt - f : open -a "Reeder"
shift + ctrl + alt - g : open -a "Home Assistant"
shift + ctrl + alt - h : open -a "Discord"
shift + ctrl + alt - j : open -a "Mail"
shift + ctrl + alt - k : open -a "Messages" #available!
shift + ctrl + alt - l : open -a "Screen Sharing"
shift + ctrl + alt - m : open -a "TiddlyDesktop"

# "Layer 2" - others
shift + ctrl + alt - v : open -a "Maps"
shift + ctrl + alt - x : open -a "FindMy"
shift + ctrl + alt - c : open -a "Calendar"
shift + ctrl + alt - r : open -a "Finder"
