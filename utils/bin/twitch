#!/bin/sh

channels=$(tiddlywiki_render "Twitch Subscriptions" | sed 's/^/https:\/\/www.twitch.tv\//')

live_channels=""
while IFS= read -r url; do
    if yt-dlp --skip-download "$url" >/dev/null 2>&1; then
        live_channels+="$url\n"
    fi
done <<< "$channels"

echo "$live_channels" | fzf_mpv
